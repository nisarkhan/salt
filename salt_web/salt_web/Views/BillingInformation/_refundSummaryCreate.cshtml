@model salt_web.Models.BillingInformationViewModel
 <!--insert refund summary... -->
@using (Html.BeginForm("Create", "BillingInformation", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ClientPKID)
    <div class="panel-body">
        <div class="tab-content">

            <div class="form-horizontal">
                <div class="row">
                    <div class="col-xs-5">
                        <div class="form-group">
                            <label for="" class="col-xs-5 control-label">State:</label>
                            <div class="col-xs-7">
                                @Html.DropDownListFor(m => m.State, (IEnumerable<SelectListItem>)ViewBag.DropDownState, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-5">
                        <div class="form-group">
                            <label class="col-xs-5 control-label">Vendor:</label>
                            <div class="col-xs-7">
                                @Html.DropDownListFor(m => m.CompanyLegalName, (IEnumerable<SelectListItem>)ViewBag.DropDownVendorNames, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CompanyLegalName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-5">
                        <div class="form-group">
                            <label class="col-xs-5 control-label">Tax Amount Identified:</label>
                            <div class="col-xs-7">
                                @Html.EditorFor(m => m.TaxAmountIdentified, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TaxAmountIdentified, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-5">
                        <div class="form-group">
                            <div class="col-xs-7">
                                <input type="submit" value="Insert" style="height:35px;width:75px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}