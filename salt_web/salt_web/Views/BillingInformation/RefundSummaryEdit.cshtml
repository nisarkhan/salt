@model salt_web.Models.RefundSummaryViewModelGrid

@{
    
}
<div class="col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            Refund Summary
        </div>

        @if (TempData["message"] != null)
        { @Html.Partial("~/Views/Shared/partial/_notification.cshtml");
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- /.panel-heading -->
            <div class="panel-body">
                <!-- Nav tabs -->
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#Business" data-toggle="tab">Refund Summary - Edit</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="Business">

                        <div class="form-horizontal">
                            <hr />
                           

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Vendor:</label>
                                        <div class="col-xs-7">                                            
                                            @Html.EditorFor(m => m.CompanyLegalName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.CompanyLegalName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Amount Identified:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.AmountIdentified, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AmountIdentified, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">State Identified:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Adjusted:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.Adjust, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Adjust, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Collection Note:</label>
                                        <div class="col-xs-7">
                                            @Html.DropDownListFor(m => m.CollectionNoteName, (IEnumerable<SelectListItem>)ViewBag.DropDownMenuCollectionNote, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CollectionNoteName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Amount Received:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.AmountRecovered, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AmountRecovered, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Batch Number:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.BatchNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.BatchNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Notes:</label>
                                        <div class="col-xs-7">
                                            @Html.TextAreaFor(m => m.Notes, 6, 80, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row text-right">
                            <div class="col-xs-12">
                                @Html.ActionLink("Back to List", "Edit", new { id = Model.ClientPKID })
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <button class="btn btn-default" type="submit"> <i class="fa fa-save"></i> Save </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</div>
