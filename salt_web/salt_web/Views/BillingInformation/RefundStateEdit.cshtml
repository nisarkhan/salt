@model salt_web.Models.StateRefundEntryViewModel

@{
    
}
<div class="col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            Refund At The State
        </div>

        @if (TempData["message"] != null)
        { @Html.Partial("~/Views/Shared/partial/_notification.cshtml");
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- /.panel-heading -->
            <div class="panel-body">
                <!-- Nav tabs -->
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#Business" data-toggle="tab">Refund State - Edit</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="Business">

                        <div class="form-horizontal">
                            <hr />
                           

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Batch Description:</label>
                                        <div class="col-xs-7">                                            
                                            @Html.EditorFor(m => m.BatchDescription, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.BatchDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Amount Submitted:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.AmountSubmitted, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AmountSubmitted, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Amount Paid:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.AmountPaid, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AmountPaid, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Denied Adjusted:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.DeniedAdjusted, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DeniedAdjusted, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Balance At State:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.BalanceState, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.BalanceState, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Batch Number:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.BatchNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.BatchNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">MTS Mailed:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.DateMTSMailed, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DateMTSMailed, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Notes:</label>
                                        <div class="col-xs-7">
                                            @Html.TextAreaFor(m => m.Notes, 6, 80, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row text-right">
                            <div class="col-xs-12">
                                @Html.ActionLink("Back to List", "Edit", new { id = Model.ClientPKID })
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <button class="btn btn-default" type="submit"> <i class="fa fa-save"></i> Save </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</div>
