@model salt_web.Models.WorkWeb

@{
    ViewBag.Title = "Create";
}
<div class="col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            New Request
        </div>

        @if (TempData["message"] != null)
        { @Html.Partial("~/Views/Shared/partial/_notification.cshtml");
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- /.panel-heading -->
            <div class="panel-body">
                <!-- Nav tabs -->
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#Business" data-toggle="tab">New Request</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="Business">

                        <div class="form-horizontal">
                            <hr />
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Priority:</label>
                                        <div class="col-xs-7">
                                            @Html.DropDownList("Priority", new List<SelectListItem>
                                            {
                                                new SelectListItem { Text = "Normal", Value = "Normal", Selected = true },
                                                new SelectListItem { Text = "High", Value = "High"}
                                            }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Status:</label>
                                        <div class="col-xs-7">
                                            @Html.DropDownList("Status", new List<SelectListItem>
                                            {
                                                new SelectListItem { Text = "Open", Value = "Open", Selected = true }
                                            
                                            }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Subject:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Description:</label>
                                        <div class="col-xs-7">
                                            @Html.TextAreaFor(m => m.Description, 6, 80, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row text-right">
                            <div class="col-xs-12">
                                @Html.ActionLink("Back to List", "Index")
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <button class="btn btn-default" type="submit"> <i class="fa fa-save"></i> Save </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</div>
