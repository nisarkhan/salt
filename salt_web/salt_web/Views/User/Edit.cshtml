@model salt_web.Models.User.UserViewModel

@{
    ViewBag.Title = "Update User";
}
<div class="col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            Update User
        </div>

        @if (TempData["message"] != null)
        { @Html.Partial("~/Views/Shared/partial/_notification.cshtml");
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            @Html.HiddenFor(model => model.UserId)
        <!-- /.panel-heading -->
            <div class="panel-body">
                <!-- Nav tabs -->
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#Business" data-toggle="tab">Update User</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="Business">

                        <div class="form-horizontal">
                            <hr />
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">User Name:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div> 
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Password:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Confirm Password:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Email:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Security Question:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.PasswordQuestion, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PasswordQuestion, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Security Answer:</label>
                                        <div class="col-xs-7">
                                            @Html.EditorFor(m => m.PasswordAnswer, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PasswordAnswer, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="" class="col-xs-5 control-label">Group:</label>
                                        <div class="col-xs-7">
                                           @Html.DropDownListFor(m => m.RoleName, (IEnumerable<SelectListItem>)ViewBag.DropDownGroup, new { @class = "form-control" })
                                           @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="row text-right">
                            <div class="col-xs-12">
                                @Html.ActionLink("Back to List", "Index")
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <button class="btn btn-default" type="submit"> <i class="fa fa-save"></i> Save </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</div>
